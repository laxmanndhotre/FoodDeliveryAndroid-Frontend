<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toggle Group for Order Types -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleOrderType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@+id/btnAvailableOrders">

        <Button
            android:id="@+id/btnAvailableOrders"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:textColor="@color/material_dynamic_primary95"
            android:layout_height="wrap_content"
            android:text="Available Orders" />

        <Button
            android:id="@+id/btnMyOrders"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:textColor="@color/material_dynamic_primary80"

            android:layout_height="wrap_content"
            android:text="My Orders" />
    </com.google.android.material.button.MaterialButtonToggleGroup>


    <!-- Pull-to-refresh container -->
    <com.laxman.foodgramdelivery.views.SquigglySwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Shimmer skeleton (Keep for structure, but maybe hide if we prefer squiggle?) 
                 Actually, let's keep shimmer for list structure and add squiggle as top loader -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shimmer_auto_start="false"
                app:shimmer_duration="1200"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <!-- Skeleton placeholders -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/material_dynamic_primary80"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/material_dynamic_primary80"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="12dp"
                        android:background="?attr/colorSurfaceVariant"/>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <!-- Available Orders RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAvailableOrders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:requiresFadingEdge="vertical"
                android:fadingEdgeLength="100dp"
                android:visibility="visible"/>

            <!-- Assigned Orders RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerOrders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:requiresFadingEdge="vertical"
                android:fadingEdgeLength="100dp"
                android:visibility="gone"/>
            
            <!-- Empty State Text (Optional) -->
            <TextView
                android:id="@+id/textEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                 android:text="No orders found"
                android:visibility="gone"
                android:textAppearance="?attr/textAppearanceBodyLarge"/>


            <com.laxman.foodgramdelivery.views.SquigglyProgressView
                android:id="@+id/squigglyLoader"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:elevation="11dp"
                android:visibility="gone"/>

        </FrameLayout>
    </com.laxman.foodgramdelivery.views.SquigglySwipeRefreshLayout>
</LinearLayout>
